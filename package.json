{
  "name": "cafeteria-server",
  "version": "1.0.0",
  "description": "Server side application for INU Cafeteria.",
  "main": "app.js",
  "scripts": {
    "prestart": "sudo systemctl enable cafeteria",
    "start": "sudo systemctl start cafeteria",
    "restart": "sudo systemctl restart cafeteria",
    "stop": "sudo systemctl stop cafeteria",
    "pretest": "touch config/config.js",
    "test": "jest --runInBand --detectOpenHandles",
    "status": "sudo systemctl status cafeteria && echo 'Server is running.' || echo 'Server is not running.'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/inu-appcenter/cafeteria-server.git"
  },
  "keywords": [
    "inu",
    "cafeteria"
  ],
  "author": "potados",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/inu-appcenter/cafeteria-server/issues"
  },
  "homepage": "https://github.com/inu-appcenter/cafeteria-server#readme",
  "dependencies": {
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@hapi/boom": "^9.0.0",
    "@hapi/good": "^9.0.0",
    "@hapi/good-console": "^8.1.2",
    "@hapi/good-squeeze": "^5.2.1",
    "@hapi/hapi": "^19.1.1",
    "@hapi/inert": "^6.0.1",
    "@hapi/joi": "^17.1.0",
    "@hapi/vision": "^6.0.0",
    "bcrypt": "^4.0.0",
    "blipp": "^4.0.1",
    "fs-extra": "^8.1.0",
    "hapi-auth-cookie": "^10.0.0",
    "hapi-swagger": "^12.1.1",
    "jest": "^25.1.0",
    "module-alias": "^2.2.2",
    "mysql2": "^2.1.0",
    "node-fetch": "^2.6.0",
    "rand-token": "^0.4.0",
    "sequelize": "^5.21.5",
    "stream": "0.0.2",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^4.4.2"
  },
  "_moduleAliases": {
    "@root": ".",
    "@domain": "lib/domain",
    "@interfaces": "lib/interfaces",
    "@infrastructure": "lib/infrastructure",
    "@common": "lib/common",
    "@config": "config"
  },
  "jest": {
    "moduleNameMapper": {
      "@root": "<rootDir>",
      "^@((domain|interfaces|infrastructure|common){1}(/.*|))$": "<rootDir>/lib/$1",
      "^@((config){1}(/.*|))$": "<rootDir>/$1"
    },
    "collectCoverageFrom": [
      "**/*.{js}",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/coverage/**"
    ]
  },
  "babel": {
    "plugins": [
      [
        "@babel/plugin-proposal-class-properties",
        {
          "loose": true
        }
      ]
    ]
  }
}
